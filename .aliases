# tailing webserver logs
# nginx:  tln, tl
# apache: tla
tl() {
  tln
}
tln() {
  local TLINES=50
  if [[ $@ = [0-9]* ]]; then
    local TLINES="$@"
  fi
  sudo tail -n "$TLINES" /var/log/nginx/error.log
}
tla() {
  local TLINES=50
  if [[ $@ = [0-9]* ]]; then
    local TLINES="$@"
  fi
  sudo tail -n "$TLINES" /var/log/apache2/error.log
}


# git
gb()  { git branch; }
gf()  { git fetch; }
gc()  { git commit -a; }
gco() { git checkout "$@"; }
gcb() { git checkout -t origin/"$@"; }
gp()  { git pull origin "$@"; git submodule update --init --recursive; git submodule sync; }
gpm() { gp master; }
gs()  { git push origin "$@"; }
gsm() { gs master; }
